<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="140dp"
    android:background="@drawable/bg_room_violet"
    android:id="@+id/viewItemRoom"
    android:clipChildren="true"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imageViewBGTask"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:src="@drawable/tb_violet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Задание Х"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="20sp"
        android:textColor="#1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Краткое описание или начало формулировки задания"
        android:textColor="#1A1A1A"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTaskName"
        app:layout_constraintTop_toBottomOf="@+id/textViewTaskName" />

    <android.widget.Button
        android:id="@+id/buttonOpenTask"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/bg_button_room"
        android:fontFamily="@font/montserrat_medium"
        android:text="Перейти"
        android:textAllCaps="false"
        android:textColor="#DCC1FF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/buttonDeleteTask"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="Удалить задание"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTaskStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Создано"
        android:textColor="#885AEF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
